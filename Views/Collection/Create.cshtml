@model CreateCollectionViewModel

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="nav-item">
                Create a new collection?
            </h2>
        </div>
        <br /><br />
        <div class="mb-3">
            <label asp-for="Name">
                Name:&nbsp;&nbsp;
            </label>
            <input asp-for="Name" class="form-control" style="width: 400px; height: 30px;" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description">
                Description:&nbsp;&nbsp;
            </label>
            <input asp-for="Description" class="form-control" style="width: 400px; height: 30px;" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image" class="control-label">
                Image:&nbsp;&nbsp;
            </label>
            <input asp-for="Image" type="file" class="form-control" placeholder="Image"  style="width: 400px;" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <br />
        <div class="pb-3">
            <div>
                <label asp-for="Theme">
                    Collection theme:&nbsp;&nbsp;
                </label>
                <select asp-for="Theme" asp-items="Html.GetEnumSelectList<CollectionTheme>()"></select>
            </div>
        </div>
        <div class="row">
            <p class="mb-3">In the standard collection, items have a name and tags. <br>You can choose up to three additional properties of items.</p>       
            <div class="mb-3">
                <label asp-for="FieldName1">
                    Additional item property #1:
                </label>
                <input asp-for="FieldName1" class="form-control" style="width: 400px; height: 30px;" />
            </div class="mb-3">
            <div class="mb-3">
                <label asp-for="TypeField1">
                    Property type:&nbsp;&nbsp;
                </label>
                <select asp-for="TypeField1" asp-items="Html.GetEnumSelectList<FieldType>()"></select>
            </div>
            <div class="mb-3">
                <label asp-for="FieldName2">
                    Additional item property #2:
                </label>
                <input asp-for="FieldName2" class="form-control" style="width: 400px; height: 30px;" />
                </div>
            <div class="mb-3">
                <label asp-for="TypeField2">
                    Property type:&nbsp;&nbsp;
                </label>
                <select asp-for="TypeField2" asp-items="Html.GetEnumSelectList<FieldType>()"></select>
            </div>
            <div class="mb-3">
                <label asp-for="FieldName3">
                    Additional item property #3:
                </label>
                <input asp-for="FieldName3" class="form-control" style="width: 400px; height: 30px;" />
            </div>
        </div>
        <div class="mb-3">
            <div>
                <label asp-for="TypeField3">
                    Property type:&nbsp;&nbsp;
                </label>
                <select asp-for="TypeField3" asp-items="Html.GetEnumSelectList<FieldType>()"></select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary" style="width:120px">
            <i class="bi bi-plus-circle"></i>&nbsp;
            Create
        </button>       
        <a asp-controller="Collection" asp-action="Index" asp-route-id="@GlobalVariables.SelectedUserId" class="btn btn-secondary" style="width:120px">
            <i class="bi bi-reply"></i>&nbsp;
            Cancel
        </a>
    </div>
</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}
