@model Collection

<form method="post" asp-action="Del">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Do you want to delete this collection?
            </h2>
        </div>
        <button type="submit" class="btn btn-danger" style="width:120px">
            <i class="bi bi-trash"></i>&nbsp;
            Delete
        </button>
        <a asp-controller="Collection" asp-action="Index" asp-route-id="@GlobalVariables.SelectedUserId" class="btn btn-secondary" style="width:120px">
            <i class="bi bi-reply"></i>&nbsp;
            Cancel
        </a>
    </div>
</form>