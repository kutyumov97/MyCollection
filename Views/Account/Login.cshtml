@using MyCollection.Models
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-6 offset-4">
        <br />
        <p>
            <h4>
                Log in to your account
            </h4>
        </p>
        <br />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" style="width: 300px;" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" style="width: 300px;" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input class="btn btn-success " type="submit" value="Log in" style="width: 120px;"  />
                        &nbsp;&nbsp;&nbsp;
                        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index" style="width: 120px;" >
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
